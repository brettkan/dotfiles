  hist2 = log origin/feat/donorFlowRedesign --graph --pretty=format:'%C(yellow)%h%Creset %C(blue)%cr:%Creset %s%C(red)%d %C(green)%an%Creset' --abbrev-commit
  type = cat-file -t
